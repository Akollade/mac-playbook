<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>KeepAlive</key>
	<true/>
	<key>Label</key>
	<string>homebrew.mxcl.mailpit</string>
	<key>LimitLoadToSessionType</key>
	<array>
		<string>Aqua</string>
		<string>Background</string>
		<string>LoginWindow</string>
		<string>StandardIO</string>
		<string>System</string>
	</array>
	<key>ProgramArguments</key>
	<array>
		<string>{{ brew_prefix }}/opt/mailpit/bin/mailpit</string>
    <string>--listen</string>
    <string>{{ mailpit_ui_bind_addr }}</string>
    <string>--smtp</string>
    <string>{{ mailpit_smtp_bind_addr }}</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StandardErrorPath</key>
	<string>{{ brew_prefix }}/var/log/mailpit.log</string>
	<key>StandardOutPath</key>
	<string>{{ brew_prefix }}/var/log/mailpit.log</string>
</dict>
</plist>
