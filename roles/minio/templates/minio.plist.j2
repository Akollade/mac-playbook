<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>EnvironmentVariables</key>
    <dict>
      <key>MINIO_ROOT_USER</key>
      <string>{{ minio_access_key }}</string>
      <key>MINIO_ROOT_PASSWORD</key>
      <string>{{ minio_secret_key }}</string>
    </dict>
    <key>KeepAlive</key>
    <true/>
    <key>Label</key>
    <string>{{ minio_plist_name }}</string>
    <key>ProgramArguments</key>
    <array>
      <string>{{ brew_prefix }}/opt/minio/bin/minio</string>
      <string>server</string>
      <string>--config-dir={{ brew_prefix }}/etc/minio</string>
      <string>--address=:{{ minio_port }}</string>
      <string>{{ brew_prefix }}/var/minio</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>WorkingDirectory</key>
    <string>{{ brew_prefix }}</string>
    <key>StandardErrorPath</key>
    <string>{{ brew_prefix }}/var/log/minio/output.log</string>
    <key>StandardOutPath</key>
    <string>{{ brew_prefix }}/var/log/minio/output.log</string>
    <key>RunAtLoad</key>
    <true/>
  </dict>
</plist>
